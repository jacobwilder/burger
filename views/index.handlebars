<h1>Eat Da Burger!</h1>

<h2>Time to devour a burger! Pick one!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
    <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		{{#if devoured}}Regurgitate!{{else}}Devour!{{/if}}
	</button>
      {{this.burger_name}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
    <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		{{#if devoured}}Regurgitate!{{else}}Devour!{{/if}}
	</button>
      <li>{{this.burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button class="newBurger" type="submit">Add Burger</button>
</form>

